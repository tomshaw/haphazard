<div id="blog-list">
  <?php foreach($this->entries as $entry): ?>
  <div class="page-header" style="border-bottom:none;">
    <h1><?= urldecode($entry->title) ?></h1> 
    <h1><small>By <i><?= $entry->author ?>.</i> Published on, <?= new Zend_Date($entry->created) ?>.</small></h1>
  </div>
