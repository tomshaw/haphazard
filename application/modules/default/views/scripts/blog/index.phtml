  <p class="blog"><?php if($entry->comment_count): ?> <span class="pull-right" style="margin-right:25px;">Comments: #<?php echo $entry->comment_count ?></span><?php endif; ?> Full story: <a href="/entry/<?= urlencode($entry->title) ?>" title="Read: <?= $entry->title ?>"><?= $entry->title ?></a></p>
  <hr>
  <?php endforeach; ?>
</div>